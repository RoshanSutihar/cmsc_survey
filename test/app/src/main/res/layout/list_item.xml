<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="What is your name?" />

    <RadioGroup
        android:id="@+id/answers_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_text_view"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/answer_1_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roshan" />

        <RadioButton
            android:id="@+id/answer_2_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ram" />

        <RadioButton
            android:id="@+id/answer_3_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shyam" />

        <RadioButton
            android:id="@+id/answer_4_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hari" />
    </RadioGroup>
</RelativeLayout>
